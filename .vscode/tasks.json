{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run browser",
            "type": "shell",
            "command": "cd wnr2; cordova run browser",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$jshint"
            ]
        },
        {
            "label": "run ios",
            "type": "shell",
            "command": "cd wnr2; cordova run ios",
            "group": "build",
            "problemMatcher": [
                "$jshint"
            ]
        },
        {
            "label": "run electron",
            "type": "shell",
            "command": "cd wnr2; cordova run electron",
            "group": "build",
            "problemMatcher": [
                "$jshint"
            ]
        },
        {
            "label": "run android",
            "type": "shell",
            "command": "cd wnr2; cordova run android",
            "group": "build",
            "problemMatcher": [
                "$jshint"
            ]
        },
        {
            "label": "install",
            "type": "shell",
            "command": "yarn",
            "group": "none"
        }
    ]
}